# SOPS Secrets Template for OpenClaw + Composio
# 1. Run ./encrypt (will copy this to secrets.yaml.work)
# 2. Fill in your values
# 3. Save and exit - secrets.yaml will be created automatically

# Generate with: mkpasswd -m SHA-512
user_hashedPassword: "$6$..."

# OpenClaw gateway authentication token
# Generate with: openssl rand -hex 32
openclaw_gateway_token: "your-token-here"

# Composio encryption key (32-byte hex)
# Generate with: openssl rand -hex 32
composio_encryption_key: "your-32-byte-hex-key"

# Composio JWT secret
# Generate with: openssl rand -hex 32
composio_jwt_secret: "your-jwt-secret"

# Signal phone number (international format, e.g. +14155551234)
signal_phone_number: "+1234567890"

# WiFi credentials (only used if enableWifi = true in settings.nix)
wifi_psk: "password"
